{
  "compilerOptions": {
    "baseUrl": ".",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "target": "ES6",
    "allowJs": true,

    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "strict": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts"]
}
